{
    "extends": "@tsconfig/svelte/tsconfig.json",
  	"compilerOptions": {
		  "moduleResolution": "node",
		  "target": "esnext",
		  "module": "esnext",
          // "importsNotUsedAsValues": "error",
		  "importsNotUsedAsValues": "remove", // https://github.com/IBM/carbon-icons-svelte/blob/48b23ff33c7b25893cade31716d131e1da0e9ea2/examples/rollup-typescript/tsconfig.json#L5
		  "isolatedModules": true,
		  "sourceMap": true,
		  "esModuleInterop": true,
		  "skipLibCheck": true,
		  "forceConsistentCasingInFileNames": true,
		  "baseUrl": ".",
		  "allowJs": true,
		  "checkJs": true,
    },
    "types": ["node", "svelte"],

  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}